<table>
<tr>
<th>Original URL</th>
<th>Shortened URL</th>
</tr>

<%  @urls.each do |url| %>
    <tr>
          <td> <%= link_to url.long_url, url.long_url %> </td>     
          <td> <%= link_to url.short_url, url.short_url %> </td>
          <td> <%= link_to "Show", url_path(url) %> </td>

    </tr>   
<% end %>
</table>

<p>
<%= link_to "Shorten a Url", new_url_path %>
</p>